---
interface Props {
    id: string;
    name: string;
    img: string;
    success: boolean;
    flightNumber: number;
    details: string | null;
}

const { id, name, img, success,flightNumber, details } = Astro.props;
const launchStatus = success ? "success" : "Failure";
---
<!-- This is an example component -->


<div class=' mx-auto bg-slate-500 rounded-3xl shadow-xl'>
  <div class="grid rounded-3xl max-w-[370px] shadow-sm bg-gray-800 flex-col">
     <img
     src={img}
     class=" justify-center grid h-80 object-cover"
     alt={`Lanzamiento #${id}`}
     />
     <div class="group p-6 grid z-10">
        <a
           href={`/launch/${id}`}
           class="font-bold sm:text-2xl text-white line-clamp-2"
           >
        {name}
        </a>
        <span class:list={[" w-1/3  font-medium  px-2 text-center rounded-md border-green-900 opacity-80",
        {
        "bg-green-400 text-green-900": success,
        "bg-red-400 text-red-900": !success,
        }
        ]}>
        {launchStatus}
        </span>
        <div class="h-28">
           <span class="line-clamp-4 py-2 text-sm font-light leading-relaxed">
              <p class="block font-sans text-sm font-normal leading-normal text-white antialiased ">
                 {details != null && details?.length > 100 ? details.slice(0,100) + "...": details}
              </p>
           </span>
        </div>
        <div class=" grid-cols-2 flex group justify-between">
           <div class="font-black flex flex-col">
              <span class="text-yellow-500 text-xl">Flight #{flightNumber}</span>
           </div>
        </div>
     </div>
  </div>
</div>



  